<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    tools:context="com.codeneitor.appgooglemaps.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
        android:text="@string/lugares"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/primavera"/>
        <Button
            android:id="@+id/bt2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/unicentro"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/villacentro"/>
        <Button
            android:id="@+id/bt4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/llanocentro"/>
    </LinearLayout>

</LinearLayout>
